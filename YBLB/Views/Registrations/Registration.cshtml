
@{
    Layout = null;
}

<style>

    @@media (min-width: 1025px) {
        .h-custom {
            height: 100vh !important;
        }
    }

    .noselect {
        -webkit-touch-callout: none; /* iOS Safari */
        -webkit-user-select: none; /* Safari */
        -khtml-user-select: none; /* Konqueror HTML */
        -moz-user-select: none; /* Firefox */
        -ms-user-select: none; /* Internet Explorer/Edge */
        user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome and Opera */
    }
</style>

<script src="~/Content/Gijgo/js/jquery-3.3.1.min.js"></script>
<link href="~/Content/Gijgo/css/gijgo.min.css" rel="stylesheet" />
<script src="~/Content/Gijgo/js/gijgo.min.js"></script>

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")


<div class="noselect">



    <section class="h-100 h-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card rounded-3">
                        @*<img src="~/Content/Img/40000.jpg" class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;" alt="Sample photo" />*@
                        <div class="card-body p-4 p-md-5">
                            <button id="proc-to-logins" type="button" class="btn btn-outline-primary mt-2 mb-2" data-mdb-ripple-color="dark"> < Login</button>

                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

                            <form class="px-md-2">
                                <div class="form-outline mb-3">
                                    <input type="text" id="txt_cname" class="form-control form-control-sm" />
                                    <label class="form-label" for="form12">Complete Name</label>
                                </div>

                                <div class="form-outline mb-3">
                                    <input type="text" id="txt_address" class="form-control form-control-sm" />
                                    <label class="form-label" for="form12">Address</label>
                                </div>

                                <div class="mb-3">
                                    <small>Gender</small>
                                    <select id="s_gender" class="form-select form-select-sm " aria-label="Default select example" width="30%">
                                        <option value="Male"> Male </option>
                                        <option value="Female"> Female </option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <small class="form-helper">Birth Date</small>
                                    <input id="datepicker2s" class="form-control form-control-sm" width="100%" />
                                    <script>
                                        $('#datepicker2s').datepicker();
                                        $("#datepicker2s").next(".gj-icon").css("margin-top", "2px");
                                        $("#datepicker2s").next(".gj-icon").css("margin-right", "5px");
                                    </script>
                                </div>

                                <div class="form-outline mb-3">
                                    <input type="email" id="txt_uemail" class="form-control form-control-sm" />
                                    <label class="form-label" for="form12">Email</label>
                                </div>

                                <div class="form-outline mb-3">
                                    <input type="email" id="txt_username" class="form-control form-control-sm" />
                                    <label class="form-label" for="form12">Username</label>
                                </div>

                                <div class="form-outline mb-3">
                                    <input type="password" id="passbase" class="form-control form-control-sm" />
                                    <label class="form-label" for="form12">Password</label>
                                </div>

                                <div class="form-outline mb-3 conpass">
                                    <input type="password" id="passConfirmBase" class="form-control form-control-sm" />
                                    <label class="form-label" for="form12">Confirm Password</label>
                                </div>

                                <div class="mb-3 text-sm">
                                    <small>Terms and Conditions</small>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="chkAgree" name="chkAgree" />
                                        <small class="form-check-label" for="flexCheckDefault">I have read and agree to the Privacy Policy</small>
                                    </div>
                                </div>

                                <center class="mt-5">
                                    <button id="btn_add_userRegs" type="submit" class="btn btn-success btn-lg mb-1 right">Submit</button>
                                </center>


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




    <!-- Modal -->
    <div class="modal fade"
         id="errorModalRegUser"
         data-mdb-backdrop="static"
         data-mdb-keyboard="false"
         tabindex="-1"
         aria-labelledby="staticBackdropLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel"><i class="fa-solid fa-circle-exclamation"></i>&nbsp;Error</h5>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="regContainer">
                            <p id="dt1"></p>
                            <p id="dt2"></p>
                            <p id="dt3"></p>
                            <p id="dt4"></p>
                            <p id="dt5"></p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-mdb-dismiss="modal">Understood</button>
                </div>
            </div>
        </div>
    </div>



    <!-- Modal -->
    <div class="modal fade"
         id="modal-success-reg"
         data-mdb-backdrop="static"
         data-mdb-keyboard="false"
         tabindex="-1"
         aria-labelledby="staticBackdropLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Registratoin Complete!</h5>
                </div>
                <div class="modal-body">
                    <p>Your Registration is Complete</p>
                    <small>Proceed to login form!</small>
                </div>
                <div class="modal-footer">
                    <button id="proceed-btn" type="button" class="btn btn-success">Proceed to Login</button>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade"
         id="modal-userexist-reg"
         data-mdb-backdrop="static"
         data-mdb-keyboard="false"
         tabindex="-1"
         aria-labelledby="staticBackdropLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">User is Already Exist!</h5>
                </div>
                <div class="modal-body">
                    <p>Username is taken</p>
                    <small>choose another username</small>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-mdb-dismiss="modal">Understood!</button>
                </div>
            </div>
        </div>
    </div>


</div>




@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")